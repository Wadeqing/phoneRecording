<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_bar"
        android:background="@color/statu_bar_color" />

    <include layout="@layout/view_title" />

    <LinearLayout
        android:id="@+id/linearlayout_tab"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@drawable/mine_tab_left_selected"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_notarization_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="公证文件"
            android:textColor="@drawable/textview_00_ff_selector"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_save_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="存证文件"
            android:textColor="@drawable/textview_00_ff_selector"
            android:textSize="17sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout_evidence_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>