<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/serviceforce_chat_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/serviceforce_textview_item_customer_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/serviceforce_chat_text" />

    <LinearLayout
        android:id="@+id/serviceforce_linearlayout_chat_voice_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/serviceforce_textview_item_customer_time"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/serviceforce_linearlayout_chat_item_voice_bg_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/serviceforce_chat_content_left_margin"
            android:background="@drawable/serviceforce_icon_other_chat_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/serviceforce_imageview_chat_item_voice_play_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/serviceforce_textview_chat_item_voice_count_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/serviceforce_textview_chat_item_voice_second_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="11''"
            android:textColor="@color/serviceforce_gray"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/serviceforce_linearlayout_chat_voice_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/serviceforce_textview_item_customer_time"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/serviceforce_imageview_chat_item_voice_resubmit"
            android:layout_width="@dimen/serviceforce_chat_resubmit_button"
            android:layout_height="@dimen/serviceforce_chat_resubmit_button"
            android:layout_marginLeft="20dp"
            android:src="@drawable/serviceforce_icon_chat_resubmit"
            android:visibility="gone" />

        <TextView
            android:id="@+id/serviceforce_textview_chat_item_voice_second"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="11''"
            android:textColor="@color/serviceforce_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/serviceforce_linearlayout_chat_item_voice_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/serviceforce_chat_content_left_margin"
            android:background="@drawable/serviceforce_icon_my_chat_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serviceforce_textview_chat_item_voice_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/serviceforce_imageview_chat_item_voice_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>