<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sinocall.phonerecordera.widget.SwipeLayout
        android:id="@+id/swipelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_white"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textview_history_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_super_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_history_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_66gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textview_lock_consult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/consulting_icon_microphones_default"
                    android:drawablePadding="8dp"
                    android:text="查看录音"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="13dp" />

                <ImageView
                    android:id="@+id/imageview_appraise"
                    android:layout_width="62dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="16dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textview_delete"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#ff3a30"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_middle" />
    </com.sinocall.phonerecordera.widget.SwipeLayout>
</LinearLayout>