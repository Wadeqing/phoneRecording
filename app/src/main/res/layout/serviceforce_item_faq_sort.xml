<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/serviceforce_faq_content_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/serviceforce_textview_item_faq_sort_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/serviceforce_faq_content_padding"
        android:text="标题"
        android:textColor="@color/serviceforce_faq_content_text"
        android:textSize="@dimen/serviceforce_faq_content_text_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/serviceforce_faq_gray_out_line"></View>

    <LinearLayout
        android:id="@+id/serviceforce_linearlayout_item_faq_sort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/serviceforce_faq_content_padding"></LinearLayout>


    <LinearLayout
        android:id="@+id/serviceforce_linearlayout_faq_sort_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/serviceforce_faq_content_padding"
        android:visibility="gone">

        <TextView
            android:id="@+id/serviceforce_textview_faq_sort_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看更多" />

        <ImageView
            android:id="@+id/serviceforce_imageview_faq_sort_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/serviceforce_xsearch_msg_pull_arrow_down" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/serviceforce_faq_gray_out_line"></View>
</LinearLayout>