<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/statu_bar_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_bar"
        android:background="@color/statu_bar_color" />

    <include layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@color/text_color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="（请填写真实有效的身份信息，身份认证后不可修改）"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_super_big" />

            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/edittext_bg"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_33gray"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_super_big" />

            <EditText
                android:id="@+id/edittext_id_card_num"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp"
                android:background="@drawable/edittext_bg"
                android:paddingLeft="5dp"
                android:textColor="@color/text_color_33gray"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="本人签名"
                android:gravity="center"
                android:textColor="@color/text_color_33gray"
                android:textSize="@dimen/text_size_super_big" />

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp">

                <TextView
                    android:id="@+id/textview_click_sign"
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center"
                    android:text="点击签名"
                    android:textColor="@color/text_color_33gray"
                    android:textSize="@dimen/text_size_15sp" />

                <ImageView
                    android:id="@+id/imageview_signature"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="存证证书申请生成费用：900录音币"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/text_color_white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请须知:"
            android:textColor="@color/text_color_00gray"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="10dp"
            android:text="每个录音文件仅需申请一次存证证明。申请成功后的存证证书将自动保存在“证据管理”中，用户可前往“证据管理”进行下载存。"
            android:textColor="@color/text_color_00gray"
            android:textSize="@dimen/text_size_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_evidence"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_backgroud_enable"
            android:text="提交申请"
            android:textColor="@color/text_color_white"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>