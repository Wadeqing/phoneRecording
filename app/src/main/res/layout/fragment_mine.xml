<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_backgoud"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_bar"
        android:background="@color/text_color_white" />

    <include layout="@layout/view_title" />

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/contact_icon_portrait_default" />

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textview_mine_phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_33gray"
                            android:textSize="@dimen/text_size_15sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mine_recording_currency"
                                android:textColor="@color/text_color_33gray"
                                android:textSize="@dimen/text_size_15sp" />

                            <TextView
                                android:id="@+id/textview_record_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_super_big" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/button_mine_account_details"
                        android:layout_width="82dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/textview_backgroud_round"
                        android:gravity="center"
                        android:text="@string/mine_account_details"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_big" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/button_recharge"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/button_backgroud_enable"
                        android:gravity="center"
                        android:text="@string/mine_recharge"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_super_big" />

                    <Button
                        android:id="@+id/button_mine_recording"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_backgroud_enable"
                        android:gravity="center"
                        android:text="@string/mine_mine_recording"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_super_big" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlayout_mine_law_service"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_law_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_law_service"
                        android:textColor="@color/text_color_33gray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/text_color_ccgray" />

                <LinearLayout
                    android:id="@+id/linearlayout_mine_apply_for_dhyg"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_preservation_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_apply_for_dhyg"
                        android:textColor="@color/text_color_33gray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlayout_mine_preferential_activity"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_activity_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_preferential_activity"
                        android:textColor="@color/text_color_33gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/mine_free_to_win_the_recording_currency"
                        android:textColor="@color/text_color_orange" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/text_color_ccgray" />

                <LinearLayout
                    android:id="@+id/linearlayout_mine_message_center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_massage_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_message_center"
                        android:textColor="@color/text_color_33gray" />

                    <TextView
                        android:id="@+id/textview_message_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/text_color_orange" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearlayout_mine_frequently_asked_questions"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_help_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_frequently_asked_questions"
                        android:textColor="@color/text_color_33gray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/text_color_ccgray" />

                <LinearLayout
                    android:id="@+id/linearlayout_mine_customer_service"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_service_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_customer_service"
                        android:textColor="@color/text_color_33gray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48dp"
                    android:background="@color/text_color_ccgray" />

                <LinearLayout
                    android:id="@+id/linearlayout_mine_system_set"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/mine_icon_set_default" />
                    </LinearLayout>

                    <TextView
                        style="@style/register_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:text="@string/mine_system_set"
                        android:textColor="@color/text_color_33gray" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/mine_icon_right_default" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textview_tellphone"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="客服电话：4008-705-000"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_big" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

