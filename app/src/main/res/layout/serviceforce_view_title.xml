<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/serviceforce_view_title_height"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/serviceforce_framelayout_view_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/serviceforce_view_title_inner_height"
        android:background="@color/serviceforce_title_bg">

        <LinearLayout
            android:id="@+id/serviceforce_linearlayout_view_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/serviceforce_view_title_padding"
            android:paddingLeft="@dimen/serviceforce_view_title_padding"
            android:paddingRight="@dimen/serviceforce_view_title_padding"
            android:paddingTop="@dimen/serviceforce_view_title_padding"
            android:visibility="visible">

            <ImageView
                android:id="@+id/serviceforce_imageview_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/serviceforce_icon_arrow_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/serviceforce_textview_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="取消"
                android:textColor="@color/serviceforce_title_text"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/serviceforce_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="联系客服"
            android:textColor="@color/serviceforce_title_text"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/serviceforce_linearlayout_view_title_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/serviceforce_imageview_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/serviceforce_textview_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="发送"
                android:textColor="@color/serviceforce_title_text"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/serviceforce_title_line"></View>
</LinearLayout>