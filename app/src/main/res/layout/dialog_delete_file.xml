<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="提示"
        android:textColor="@color/text_color_00gray"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/textview_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:text="删除该录音文件的同时会清空对应本地
        文件，您确定删除么？"
        android:textColor="@color/text_color_33gray"
        android:textSize="@dimen/text_size_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/text_color_eegray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_dialog_delete_file_cancle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_00gray"
            android:textSize="@dimen/text_size_big" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text_color_eegray" />

        <TextView
            android:id="@+id/textview_dialog_delete_file_sure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_color_00gray"
            android:textSize="@dimen/text_size_big" />
    </LinearLayout>
</LinearLayout>