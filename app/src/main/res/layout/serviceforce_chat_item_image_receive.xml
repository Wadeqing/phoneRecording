<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/serviceforce_chat_bg"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/serviceforce_chat_item_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="2015"
        android:textColor="@color/serviceforce_gray"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/serviceforce_chat_item_time"
        android:layout_marginLeft="@dimen/serviceforce_chat_content_left_margin"
        android:layout_marginRight="@dimen/serviceforce_chat_content_left_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/serviceforce_chat_content_left_margin">

            <ImageView
                android:id="@+id/serviceforce_imageview_chat_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/serviceforce_icon_other_chat_bg"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/serviceforce_loading_image"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/serviceforce_progressbar_chat_image_loading"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>


    </LinearLayout>


</RelativeLayout>