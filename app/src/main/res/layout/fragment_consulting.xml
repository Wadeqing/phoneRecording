<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_bar"
        android:background="@color/text_color_white" />

    <include layout="@layout/view_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/framlayout_lawyer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorPrimary">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_linearlayout_bg"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="17dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="呼叫律师"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="(超过10万名律师为您提供专业服务)"
                        android:textColor="@color/text_color_99gray"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/consulting_img_zqh_default" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/text_color_ccgray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="13dp"
                    android:text="服务说明："
                    android:textColor="@color/text_color_00gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:text="一键呼叫拨通电话，帮您分析法律纠纷或案情，解析重要关键点，解读相关法律条文和司法解释，专业律师团队在线实时为您提供专业法律服务；"
                    android:textColor="@color/text_color_99gray"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:text="本服务按分钟计费，每分钟80个录音币；请保证您账户中有充足的录音币（大于500个），以保障通话服务的完整与通畅。"
                    android:textColor="@color/text_color_99gray"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/lineaylayout_call_phone"
                        android:layout_width="258dp"
                        android:layout_height="44dp"
                        android:background="@drawable/button_green_22dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/home_btn_phone_default" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="center"
                            android:text="立即呼叫"
                            android:textColor="@color/text_color_white"
                            android:textSize="@dimen/text_size_super_big" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gray_linearlayout_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="3dp"
                        android:layout_height="17dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="律师来电"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/consulting_img_wsd_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:text="1.请输入简短案情描述"
                    android:textColor="@color/text_color_00gray"
                    android:textSize="@dimen/text_size_middle" />

                <EditText
                    android:id="@+id/edittext_crime_reports"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:gravity="left"
                    android:hint="请简单描述您要咨询的案件或案件类型，方便律师快速了解案情节省您接听来电等待时间。(为保护您的权益，请不要透露个人相关信息）"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机\n号码"
                        android:textColor="@color/text_color_00gray"
                        android:textSize="@dimen/text_size_middle" />

                    <EditText
                        android:id="@+id/edittext_phone_num_consulting"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:maxLength="11"
                        android:background="@drawable/edittext_bg"
                        android:gravity="center_vertical"
                        android:hint="请输入您的手机号码"
                        android:inputType="numberSigned"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_size_middle" />

                    <ImageView
                        android:id="@+id/imageview_consulting_icon_reminding"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/consulting_icon_reminding_default" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:text="2.支付赏金快速匹配在线律师"
                    android:textColor="@color/text_color_00gray"
                    android:textSize="@dimen/text_size_middle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_consulting_38"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:background="@drawable/textview_backgroud_round_selector"
                        android:gravity="center"
                        android:textColor="@drawable/textview_pr_ff_selector"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/textview_consulting_68"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/textview_backgroud_round_selector"
                        android:gravity="center"
                        android:textColor="@drawable/textview_pr_ff_selector"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/textview_consulting_98"
                        android:layout_width="80dp"
                        android:layout_height="45dp"
                        android:background="@drawable/textview_backgroud_round_selector"
                        android:gravity="center"
                        android:textColor="@drawable/textview_pr_ff_selector"
                        android:textSize="@dimen/text_size_big" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_start_consult"
                    android:layout_width="258dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_green_22dp"
                    android:gravity="center"
                    android:text="发起咨询，等待律师来电"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_super_big" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>