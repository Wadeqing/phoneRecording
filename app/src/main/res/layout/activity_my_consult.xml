<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statu_bar"
        android:background="@color/text_color_white" />

    <include layout="@layout/view_title" />

    <LinearLayout
        android:id="@+id/lineaylayout_my_consult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_call_law"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="呼叫律师"
                android:textColor="@drawable/textview_pr_99_selector" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_law_call_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="律师回电"
                android:textColor="@drawable/textview_pr_99_selector" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>

    </LinearLayout>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color_eegray" />

    <FrameLayout
        android:id="@+id/framelayout_my_consult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>