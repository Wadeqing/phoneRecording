<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/serviceforce_chat_edittext_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/serviceforce_textview_chat_comment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/serviceforce_chat_comment_title1"
            android:textColor="#595959"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#bfbfbf" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务满意度:"
                android:textColor="#595959"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/serviceforce_textview_chat_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/serviceforce_ratingbar_chat_comment"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:maxHeight="30dp"
            android:numStars="5"
            android:stepSize="1" />

        <LinearLayout
            android:id="@+id/serviceforce_linearlayout_chat_inquire"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#bfbfbf" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:text="@string/serviceforce_chat_comment_inquire_tip"
                android:textColor="#595959"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/serviceforce_linearlayout_chat_comment_inquire1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/serviceforce_imageview_chat_comment_inquire1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/serviceforce_icon_comment_unselected" />

                <TextView
                    android:id="@+id/serviceforce_textview_chat_comment_inquire1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/serviceforce_chat_comment_inquire1"
                    android:textColor="#595959" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/serviceforce_linearlayout_chat_comment_inquire2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/serviceforce_imageview_chat_comment_inquire2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/serviceforce_icon_comment_unselected" />

                <TextView
                    android:id="@+id/serviceforce_textview_chat_comment_inquire2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/serviceforce_chat_comment_inquire2"
                    android:textColor="#595959" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/serviceforce_linearlayout_chat_comment_inquire3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/serviceforce_imageview_chat_comment_inquire3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/serviceforce_icon_comment_unselected" />

                <TextView
                    android:id="@+id/serviceforce_textview_chat_comment_inquire3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/serviceforce_chat_comment_inquire3"
                    android:textColor="#595959" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/serviceforce_linearlayout_chat_comment_inquire4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/serviceforce_imageview_chat_comment_inquire4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/serviceforce_icon_comment_unselected" />

                <TextView
                    android:id="@+id/serviceforce_textview_chat_comment_inquire4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/serviceforce_chat_comment_inquire4"
                    android:textColor="#595959" />

            </LinearLayout>


            <EditText
                android:id="@+id/serviceforce_edittext_chat_comment_inquire_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/serviceforce_chat_edittext_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="top|left"
                android:hint="@string/serviceforce_chat_comment_inquire_other_tip"
                android:maxLines="2"
                android:minLines="2"
                android:padding="10dp"
                android:textColor="#595959"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>


        <Button
            android:id="@+id/serviceforce_button_chat_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/serviceforce_chat_comment_btn_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="5dp"
            android:text="提交"
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>